#!/bin/bash
#
# Pre-commit hook for RepoLens
# - Vérifie que l'email Git est bien kevin@delfour.co
# - Lance cargo fmt et cargo clippy
#

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}"

########################################
# 1) Vérifier l'email Git
########################################

EXPECTED_EMAIL="kevin@delfour.co"
CURRENT_EMAIL="$(git config user.email || echo "")"

if [[ "$CURRENT_EMAIL" != "$EXPECTED_EMAIL" ]]; then
    echo -e "${RED}Error: git user.email is '$CURRENT_EMAIL'${NC}"
    echo -e "Expected: ${YELLOW}$EXPECTED_EMAIL${NC}"
    echo -e "Fix it with:"
    echo -e "  ${YELLOW}git config user.email \"$EXPECTED_EMAIL\"${NC}"
    exit 1
fi

echo -e "${GREEN}Git email OK ($CURRENT_EMAIL)${NC}"

########################################
# 2) Vérifier cargo est dispo
########################################

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo -e "${RED}Error: cargo is not installed${NC}"
    exit 1
fi

########################################
# 3) Run cargo fmt check
########################################

echo -e "\n${YELLOW}Checking formatting (cargo fmt)...${NC}"
if ! cargo fmt --all -- --check; then
    echo -e "${RED}Formatting check failed!${NC}"
    echo -e "Run '${YELLOW}cargo fmt --all${NC}' to fix formatting issues."
    exit 1
fi
echo -e "${GREEN}Formatting OK${NC}"

########################################
# 4) Run cargo clippy
########################################

echo -e "\n${YELLOW}Running linter (cargo clippy)...${NC}"
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo -e "${RED}Clippy check failed!${NC}"
    echo -e "Fix the warnings above before committing."
    exit 1
fi
echo -e "${GREEN}Clippy OK${NC}"

echo -e "\n${GREEN}All pre-commit checks passed!${NC}"
